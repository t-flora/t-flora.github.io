---
import Base from "@/layouts/Base.astro";

const meta = {
	title: "Message Sent Successfully",
	description: "Your message has been sent successfully",
};

const { title } = meta;
---

<Base meta={meta}>
	<div class="space-y-16">
		<header class="text-center">
			<h1 class="title">{title}</h1>
		</header>
		
		<div class="max-w-2xl mx-auto text-center">
			<div class="prose prose-cactus mx-auto">
				<div class="text-6xl mb-8">✅</div>
				<p class="text-xl mb-6">Thank you for reaching out!</p>
				<p>Your message has been sent successfully. I'll get back to you as soon as possible.</p>
			</div>
			
			<div class="mt-8">
				<a 
					href="/" 
					class="inline-flex items-center px-6 py-3 bg-accent text-white font-medium rounded-md hover:bg-accent/90 transition-colors duration-200"
				>
					← Back to Home
				</a>
			</div>
		</div>
	</div>
</Base>